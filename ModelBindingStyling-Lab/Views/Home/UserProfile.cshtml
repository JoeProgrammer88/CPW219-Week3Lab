@model UserProfile

@{
    ViewData["Title"] = "J. Doe profile page";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-primary mb-1">@Model.FullName</h1>
            <p class="lead text-muted">Developer Profile</p>
        </div>
    </div>
    
    <div class="row">
        <!-- Left Column - Profile Image -->
        <div class="col-lg-4 col-md-5 mb-4">
            <div class="card shadow-lg h-100">
                <div class="card-body text-center">
                    <img src="@Model.ImageUrl" alt="Profile Picture" class="img-fluid rounded-circle mb-3" style="width: 200px; height: 200px; object-fit: cover;">
                    <h5 class="card-title">@Model.FullName</h5>
                    <p class="text-muted">Software Developer</p>
                    <div class="d-grid gap-2">
                        <a href="mailto:@Model.Email?subject=I%20saw%20your%20profile..." class="btn btn-primary btn-sm">
                            <i class="fas fa-envelope"></i> Contact Me
                        </a>
                        <a href="@Model.GitHubUrl" target="_blank" class="btn btn-outline-dark btn-sm">
                            <i class="fab fa-github"></i> View GitHub
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Column - Profile Information -->
        <div class="col-lg-8 col-md-7">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h4 class="card-title mb-0">Profile Information</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            <div class="border-start border-primary border-3 ps-3">
                                <small class="text-muted text-uppercase fw-bold">Profile ID</small>
                                <p class="mb-0 fs-5">@Model.UserProfileId</p>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="border-start border-primary border-3 ps-3">
                                <small class="text-muted text-uppercase fw-bold">Full Name</small>
                                <p class="mb-0 fs-5">@Model.FullName</p>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="border-start border-primary border-3 ps-3">
                                <small class="text-muted text-uppercase fw-bold">Email Address</small>
                                <p class="mb-0 fs-5">
                                    <a href="mailto:@Model.Email?subject=I%20saw%20your%20profile..." class="text-decoration-none">
                                        @Model.Email
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="border-start border-primary border-3 ps-3">
                                <small class="text-muted text-uppercase fw-bold">Phone Number</small>
                                <p class="mb-0 fs-5">@Model.PhoneNumber</p>
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="border-start border-primary border-3 ps-3">
                                <small class="text-muted text-uppercase fw-bold">GitHub Profile</small>
                                <p class="mb-0 fs-5">
                                    <a href="@Model.GitHubUrl" target="_blank" class="text-decoration-none">
                                        @Model.GitHubUrl
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="border-start border-primary border-3 ps-3">
                                <small class="text-muted text-uppercase fw-bold">Skilled Languages</small>
                                <div class="mt-2">
                                    @foreach(string languageSkill in Model.SkilledLanguages)
                                    {
                                        <span class="badge bg-primary me-2 mb-2 fs-6">@languageSkill</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
